@model List<Course>

<h2>Search Results</h2>

@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="rounded overflow-hidden mb-2">
                <a asp-action="PageDetails" asp-controller="Course" asp-route-id="@item.CourseId">


                    <img class="img-fluid" src="@Url.Content(item.Img)" alt="">

                    <div class="bg-secondary p-4">
                        <div class="d-flex justify-content-between mb-3">
                            <small class="m-0"><i class="fa fa-users text-primary mr-2"></i>@item.StudentNumber</small>
                            <small class="m-0"><i class="far fa-clock text-primary mr-2"></i>@item.Duration</small>
                        </div>
                        <a class="h5" href="">@item.CourseTitle</a>
                        <div class="border-top mt-4 pt-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i>@item.Rate <small>(250)</small></h6>
                                <h5 class="m-0">@item.Price</h5>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    }
}
else
{
    <p>No results found.</p>
}
