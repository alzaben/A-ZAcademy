@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<!DOCTYPE html>
<!-- Created By CodingNepal - www.codingnepalweb.com -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Counter up Animation on Scroll | CodingNepal</title>

    <link href="~/responsive counter up animation/style.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Counter-Up/1.0.0/jquery.counterup.min.js"></script>
</head>
<body>


    <div class="counter-up">
        <div class="content">

            <div class="box">
                <a asp-action="Index" asp-controller="CourseRequests">



                    <div class="icon"><i class="fas fa-history"></i></div>

                    <div class="counter">@Model["CourseRequestCount"]</div>
                    <div class="text">Courses Request</div>
                </a>
            </div>

            <div class="box">
                <a asp-action="Index" asp-controller="Courses">
                    <div class="icon"><i class="fas fa-gift"></i></div>
                    <div class="counter">@Model["CoursesCount"]</div>
                    <div class="text">Courses</div>
                </a>
            </div>
            <div class="box">
                <a asp-action="Index" asp-controller="RequestNewCourseForms">
                <div class="icon"><i class="fas fa-users"></i></div>
                <div class="counter">@Model["newcourse"]</div>
                <div class="text">New Course Requist</div></a>
            </div>
            <div class="box">
                <a asp-action="Index" asp-controller="instructors">
                <div class="icon"><i class="fas fa-award"></i></div>
                <div class="counter">@Model["instructors"]</div>
                <div class="text">instructors</div></a>
            </div>
           
            <div class="box">
                <a asp-action="EditRole" asp-controller="Account" asp-route-id="befe3aae-19e8-48ed-b9ba-2f1745efd604" asp-area="">
                <div class="icon"><i class="fas fa-award"></i></div>
                <div class="counter">@Model["StudentRoleCount"]</div>
                <div class="text">Student</div>
                </a>
            </div>
            <div class="box">
                <a asp-action="GetInx" asp-controller="InsReq" >
                    <div class="icon"><i class="fas fa-award"></i></div>
                   
                    <div class="text">instructorsReq</div>
                </a>
            </div>
            
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.counter').counterUp({
                delay: 10,
                time: 1200
            });
        });
    </script>

</body>
</html>








